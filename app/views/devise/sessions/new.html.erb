  <div class="flex items-center justify-center py-12">
  <div class="flex flex-col gap-4 py-6 px-4 max-w-sm border border-purple-500 rounded-lg shadow">
  <h2 class="text-xl text-purple-600 font-bold">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex flex-col gap-4">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-3 h-10 border border-gray-500 rounded-md" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "px-3 h-10 border border-gray-500 rounded-md" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "bg-purple-500 hover:bg-purple-600 text-white h-10 px-4 inline-flex items-center justify-center rounded-md w-full" %>
  </div>
<% end %>
    </div>

<%= render "devise/shared/links" %>
  </div>
</div>
